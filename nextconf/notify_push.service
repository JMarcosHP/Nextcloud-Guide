[Unit]
Description = Push daemon for Nextcloud clients

[Service]
Environment=PORT=7867
Environment=NEXTCLOUD_URL=http://localhost # Change this ONLY if you are on full https without proxy, like: https://yourdomain.example, or https://localhost ONLY for local instances.
ExecStart=/var/www/nextcloud/apps/notify_push/bin/x86_64/notify_push /var/www/nextcloud/config/config.php
Type=notify
User=www-data

[Install]
WantedBy = multi-user.target
